{# templates/security/login.html.twig #}
{% extends 'base_unlogged.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <img src="{{ asset('assets/img/default-monochrome-black.svg') }}" class="navbar-brand-img h-100" alt="main_logo" style="height: 90px !important; margin-top:40px;">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <h1 class="h3 card-title text-center mb-4">Por favor inicia sesión</h1>
                        <form method="post" action="{{ path('app_login') }}" class="row g-3">
                            {% if error %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <span class="alert-text">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endif %}
                            <div class="mb-3">
                                <label for="inputUsuario" class="form-label">Usuario:</label>
                                <input type="text" value="{{ last_username }}" name="_username" id="inputUsuario" class="form-control" required autofocus>
                            </div>
                            <div class="mb-3">
                                <label for="inputContraseña" class="form-label">Contraseña:</label>
                                <input type="password" name="_password" id="inputContraseña" class="form-control" required>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <input type="hidden" name="_target_path" value="{{ path('app_home') }}"> <!-- Definimos /home como url de redirección si inicia sesión con éxito-->
                            <div class="mb-3">
                                <div class="footer-inicio-sesion">
                                    <button class="btn btn-lg btn-primary " type="submit">
                                        Iniciar sesión
                                    </button>
                                    <a href="{{ path('app_register') }}" class="btn btn-lg btn-secondary btn-block"> Registrarse

                                    </a>

                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

