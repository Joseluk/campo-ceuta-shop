{% extends 'base.html.twig' %}

{% block title %}Resumen de Stock{% endblock %}

{% block body %}
    <h1>Resumen de Stock</h1>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Proveedor</th>
            <th>Producto</th>
            <th>Stock</th>
        </tr>
        </thead>
        <tbody>
        {% for item in proveedoresProductosStock %}
            <tr>
                <td>{{ item.proveedor_nombre }}</td>
                <td>{{ item.producto_nombre }}</td>
                <td>{{ item.stock_cantidad }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No se encontraron proveedores y productos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


