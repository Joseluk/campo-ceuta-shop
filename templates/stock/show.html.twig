{% extends 'base.html.twig' %}

{% block title %}Stock{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center py-3">Stock</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ stock.id }}</td>
        </tr>
        <tr>
            <th>Producto</th>
            <td>
                {% if stock.producto.imagen %}
                    <img src="{{ asset('images/productos/' ~ stock.producto.imagen) }}" alt="imagen del producto" class="img-thumbnail" width="100">
                {% else %}
                    Sin imagen
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Cantidad</th>
            <td>{{ stock.cantidad }}</td>
        </tr>
        <tr>
            <th>Precio</th>
            <td>{{ stock.precio }}</td>
        </tr>
        </tbody>
    </table>


    <div class="d-flex justify-content-between my-3">
        <a href="{{ path('app_stock_index') }}" class="btn btn-secondary" style="max-height: 40px;"><i class="fa-solid fa-backward"></i> Volver a la lista</a>
        <div>
            <a href="{{ path('app_stock_edit', {'id': stock.id}) }}" class="btn bg-gradient-warning"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
            {{ include('stock/_delete_form.html.twig', { 'class': 'd-inline-block' }) }}
        </div>
    </div>
</div>
{% endblock %}
