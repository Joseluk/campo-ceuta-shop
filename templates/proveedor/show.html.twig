{% extends 'base.html.twig' %}

{% block title %}Ver Proveedor{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center py-3">Proveedor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proveedor.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ proveedor.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ proveedor.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between my-3">
        <a href="{{ path('app_proveedor_index') }}" class="btn btn-secondary" style="max-height: 40px;"><i class="fa-solid fa-backward"></i> Volver a la lista</a>
        <div>
            <a href="{{ path('app_proveedor_edit', {'id': proveedor.id}) }}" class="btn bg-gradient-warning"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
            {{ include('proveedor/_delete_form.html.twig', { 'class': 'd-inline-block' }) }}
        </div>
    </div>
</div>
{% endblock %}
