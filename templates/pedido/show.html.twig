{% extends 'base.html.twig' %}

{% block title %}Pedido{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center py-3">Pedido</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pedido.id }}</td>
            </tr>
            <tr>
                <th>Direcci√≥n entrega</th>
                <td>{{ pedido.dirEntrega }}</td>
            </tr>
            <tr>
                <th>Detalles del pedido</th>
                <td>
                    <ul>
                        {% for detalle in pedido.pedidoDetalles %}
                            <div class="d-flex align-items-center mb-2">
                                <img src="{{ asset('images/productos/' ~ detalle.producto.imagen) }}" alt="Imagen del producto" style="width: 50px; height: 50px; margin-right: 10px;">
                                <div class="text-primary">{{ detalle.producto.nombre }}</div>
                                <span class="badge bg-secondary" style="margin-left: 10px;">{{ detalle.cantidad }}</span>
                            </div>
                        {% else %}
                            <p>No hay detalles del pedido</p>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between my-3">
        <a href="{{ path('app_pedido_index') }}" class="btn btn-secondary" style="max-height: 40px;"><i class="fa-solid fa-backward"></i> Volver a la lista</a>
        <div>
            <a href="{{ path('app_pedido_edit', {'id': pedido.id}) }}" class="btn bg-gradient-warning"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
            {{ include('pedido/_delete_form.html.twig', { 'class': 'd-inline-block' }) }}
        </div>
    </div>
</div>
{% endblock %}
